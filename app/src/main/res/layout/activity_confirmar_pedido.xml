<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmarPedidoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/LabelEndereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Endereco"
                android:textSize="20dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputCep"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:hint="Digite o CEP">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/TxtCep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputNumero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:hint="Digite o numero">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/TxtNumero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputComplemento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/TxtComplemento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite o Complemento" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputBairro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/TxtBairro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite o bairro" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputEndereco"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/TxtEndereco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite o endereÃ§o" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputCidade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/TxtCidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite a cidade" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputEstado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/TxtEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite o estado" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/LabelPagamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Formas de Pagamento"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroupPagamento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioAvista"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="A vista"
                    android:textAlignment="center" />

                <RadioButton
                    android:id="@+id/radioCartao"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Cartao"
                    android:textAlignment="center" />

                <RadioButton
                    android:id="@+id/radioBoleto"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Boleto"
                    android:textAlignment="center" />
            </RadioGroup>

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Enviar" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>