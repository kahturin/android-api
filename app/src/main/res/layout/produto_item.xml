<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgProduto"
        android:layout_width="135dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/apple"
        android:contentDescription="@string/imagem_produto_content_description" />

    <TextView
        android:id="@+id/nomeProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="8dp"
        android:text="@string/apple_android"
        app:layout_constraintStart_toStartOf="@id/imgProduto"
        app:layout_constraintEnd_toEndOf="@id/imgProduto"
        app:layout_constraintTop_toBottomOf="@id/imgProduto"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/precoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/r_40"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/nomeProduto"
        app:layout_constraintEnd_toEndOf="@id/nomeProduto"
        app:layout_constraintTop_toBottomOf="@id/nomeProduto"/>
</androidx.constraintlayout.widget.ConstraintLayout>